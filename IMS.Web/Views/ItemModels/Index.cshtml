@model IEnumerable<ItemModelVM>

@{
    ViewData["Title"] = "Models";
}

<h1>Item Model Types</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa-solid fa-plus"></i> Create New</a>
</p>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.itemModel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.itemModel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fa-solid fa-pencil-alt"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fa-solid fa-circle-info"></i></a>
                <button data-id="@item.Id" class="btn btn-danger btn-sm deleteBtn" type="button"><i class="fa-solid fa-trash-can"></i></button>
            </td>
        </tr>
}
    </tbody>
</table>

<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="clientId" name="Id"/>
</form>

@section Scripts {
    <script>        
        $(function() {
            $('.table').DataTable();
            $('.deleteBtn').click(function(e) {
                swal( {
                    title: "Are you sure?",
                    text: "Are you sure you want to delete this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if(confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#clientId').val(id);
                        $('#deleteForm').submit();
                    }
                });
            });
        });
    </script>
}