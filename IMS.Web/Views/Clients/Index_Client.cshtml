@model IEnumerable<ClientDisplayVM>

@{
    ViewData["Title"] = "Client Index";
}
<h4>Inventory Index : </h4>
<div class="container" style="display:flex;justify-content: center;">
<table class="table table-striped table-sm f12" style="width:40%;box-shadow:0 0 15px 5px;border-radius:5px;">
    <thead>
        <tr style="font-size:18px;">
            <th >
                <strong>@Html.DisplayNameFor(model => model.companyName)</strong>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.companyName)
            </td>
        </tr>
}
    </tbody>
</table>
</div>



@section Scripts {
    <script>        
        $(function() {
            $('.table').DataTable();
        });
    </script>
}